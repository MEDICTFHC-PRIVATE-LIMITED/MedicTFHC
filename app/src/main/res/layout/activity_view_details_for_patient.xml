<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amudala prabhakar raju udaya sri"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                tools:ignore="Orientation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aadhar Number :"
                    android:textColor="#2C5E83"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15dp"


                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="993412564789"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    android:textSize="17dp"
                    android:layout_marginStart="20dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"

                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                tools:ignore="Orientation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C5E83"
                    android:text="Mobile Number :"
                    android:textStyle="bold"

                    android:textSize="15dp"


                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9492862167"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    android:textSize="17dp"
                    android:layout_marginStart="20dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"

                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                tools:ignore="Orientation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C5E83"
                    android:text="Time Slot :"
                    android:textStyle="bold"

                    android:textSize="15dp"


                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="16:00"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17dp"

                    android:layout_marginStart="60dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="Orientation">
                <TextView
                    android:id="@+id/select_city"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C5E83"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="Status :" />

                <Spinner
                    android:id="@+id/cityId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"

                    android:backgroundTint="#2C5E83"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="Comments :"
                    android:textColor="#2C5E83"
                    android:textSize="16dp"
                    android:textStyle="bold" />



                <MultiAutoCompleteTextView
                    android:id="@+id/Comments_Others"
                    android:textColor="#000"
                    android:layout_width="155dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="45dp"

                    android:background="@drawable/edittext_button"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="Payment Mode"
                    android:textColor="#2C5E83"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/cash_on_hand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/green"
                        android:drawableRight="@drawable/cashonhand_icon"
                        android:layout_marginLeft="2dp" />

                    <android.support.v4.widget.Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cash on Hand"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/green" />

                    <android.support.v4.widget.Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/debit_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/creditcard_icon"
                        android:drawablePadding="5dp"
                        app:buttonTint="@color/green"/>

                    <android.support.v4.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Credi/Debit"
                        android:textSize="15dp"
                        android:textColor="@color/green" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/net_banking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/green"
                        android:drawableRight="@drawable/custom_netbanking_icon"
                        android:layout_marginLeft="2dp" />

                    <android.support.v4.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:text="Net Banking"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/green"
                        android:textSize="15dp" />

                    <android.support.v4.widget.Space
                        android:layout_width="34dp"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/pay_paym"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/custom_icon"
                        app:buttonTint="@color/green"/>

                    <android.support.v4.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/paytmtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paytm"
                        android:textSize="15dp"
                        android:textColor="@color/green" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                tools:ignore="Orientation">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C5E83"
                    android:text="Amount :"
                    android:textStyle="bold"

                    android:textSize="15dp"


                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17dp"

                    android:layout_marginStart="70dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="Upload Precription"
                    android:textColor="#2C5E83"/>
                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/main1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="100dp"
                    android:orientation="vertical"
                    tools:ignore="MissingPrefix">

                    <android.support.design.widget.AppBarLayout
                        android:id="@+id/appbar1"
                        android:layout_width="170dp"
                        android:layout_height="196dp"
                        android:fitsSystemWindows="true"

                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                        <ImageView
                            android:id = "@+id/Lience_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rao" />
                    </android.support.design.widget.AppBarLayout>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/Lience_ImageIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:clickable="true"
                        app:fabSize="mini"
                        android:src="@android:drawable/ic_menu_camera"
                        app:layout_anchor="@id/appbar1"
                        app:layout_anchorGravity="bottom|right|end" />

                </android.support.design.widget.CoordinatorLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button

                    android:id="@+id/Saturday"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginStart="130dp"
                    android:textColor="#fff"
                    android:background="@drawable/round_button"
                    android:text="Submit"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
