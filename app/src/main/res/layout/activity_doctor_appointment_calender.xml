<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/doctor_appointment_calendar_heading"
            android:text=" Doctor Appointment Calendar "
            android:layout_marginStart="90dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
       android:layout_marginStart="39dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Pending"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"

            android:layout_marginStart="5dp"
            app:cardBackgroundColor="#FFFF00"
            android:elevation="10dp"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/count_pendding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_gravity="center"

                android:text="2"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Reject"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#ff0000"

                android:layout_marginStart="18dp"

                android:elevation="10dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/count_Reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:layout_gravity="center"

                    android:text="0"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Accept"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#008000"
                android:layout_marginStart="18dp"
                android:elevation="10dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/count_Accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Reschedule"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#0000FF"
                android:layout_marginStart="18dp"
                android:elevation="10dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/count_Reschedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:layout_gravity="center"

                    android:text="0"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="#FFFF00"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            android:text="pending"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:text="Reject"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="31dp"
            android:textColor="#008000"
            android:textStyle="bold"
            android:text="Accept"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="22dp"
            android:textColor="#0000FF"
            android:textStyle="bold"
            android:text="Reschedule"/>
    </LinearLayout>

</RelativeLayout>
