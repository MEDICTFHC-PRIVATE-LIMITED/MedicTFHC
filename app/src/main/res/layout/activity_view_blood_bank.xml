<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1a237e"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <android.support.design.widget.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_gradient"
        app:popupTheme="@style/AppTheme.PopupOverlay">
    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="380dp"
        android:layout_height="170dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:visibility="gone"-->
        <!--android:id="@+id/cityname"/>-->

    <TextView
        android:id="@+id/bloodbankname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView"
        android:textAlignment="center"
        android:textColor="#f99303"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/bankcardId"
        android:layout_width="340dp"
        android:layout_height="260dp"

        android:layout_below="@+id/bloodbankname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:clickable="true"
        android:foreground="#1C00ffff">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="6dp"
            android:text="Address         :"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="104dp"
            android:paddingLeft="6dp"

            android:text="Person name:"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:layout_marginTop="105dp"
            android:textSize="15dp"
            android:paddingLeft="10dp"

            />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:textSize="15dp"
            android:layout_marginTop="134dp"
            android:paddingLeft="12dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:paddingLeft="6dp"
            android:text="Email ID          :"
            android:textColor="#000"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/emailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:layout_marginTop="160dp"
            android:textSize="15dp"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="188dp"
            android:paddingLeft="6dp"
            android:text="Location        :"
            android:textColor="#000"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:textColor="#0323f5"
            android:textStyle="bold"
            android:layout_marginTop="191dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_navigation_black_24dp"
            android:textSize="15dp"
            android:text="Google Map" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bankcardId"
            android:layout_alignParentStart="true"
            android:layout_marginTop="226dp"
            android:paddingLeft="6dp"
            android:text="I want this information through "
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/SMS"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="256dp"
            android:layout_marginTop="226dp"
            android:textAlignment="center"
            android:background="@drawable/edittext_button"
            android:text="SMS"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/addressline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:maxLines="6"
            android:paddingLeft="33dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="132dp"

            android:paddingLeft="6dp"
            android:text="Phone No      :"
            android:textColor="#000"
            android:textSize="15dp" />


    </android.support.v7.widget.CardView>


</RelativeLayout>