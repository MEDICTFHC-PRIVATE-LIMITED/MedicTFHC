<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!-- Editext for Search -->
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:id="@+id/cancel_icon"
        android:drawableRight="@drawable/cancel"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <!--<android.support.v7.widget.SearchView-->
    <!--android:id="@+id/citysearch"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="2dp"-->
    <!--android:layout_marginRight="2dp"-->
    <!--app:iconifiedByDefault="false"-->
    <!--android:background="@drawable/edittext_location"-->
    <!--app:queryHint="Search city "-->
    <!--android:paddingLeft="10dp">-->
    <!--</android.support.v7.widget.SearchView>-->

    <EditText android:id="@+id/inputSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/edittext_location"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:hint=" Search City.."
        android:paddingLeft="10dp"
        android:inputType="textVisiblePassword"/>

    <!-- List View -->
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/current_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_location_searching_black_24dp"
            android:paddingLeft="5dp"
            android:textColor="#74BE73"
            android:text=" Current Location"/>
    </android.support.v7.widget.CardView>


    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Cities"
        android:textAlignment="center"
        android:background="#64dd17"
        android:padding="4dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <ListView
        android:id="@+id/list_view"
        android:dividerHeight="0dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

