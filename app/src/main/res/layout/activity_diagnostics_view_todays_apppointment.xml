<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_gradient"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags="scroll|enterAlways" >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:padding="20dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_salutation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#8c8080">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="5dp"
                    android:ems="20"
                    android:hint="Patient Name"
                    android:inputType="textPersonName"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#8c8080">

                <EditText
                    android:id="@+id/emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="5dp"
                    android:ems="20"
                    android:hint="Email ID"
                    android:inputType="textPersonName"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#8c8080">

                <EditText
                    android:id="@+id/mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:drawableLeft="@drawable/ic_mail_black_24dp"
                    android:drawablePadding="5dp"
                    android:ems="20"
                    android:hint="Mobile Number"
                    android:inputType="textPersonName"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_aadhar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#8c8080">

                <EditText
                    android:id="@+id/aadharnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="5dp"
                    android:ems="20"
                    android:hint="Aadhar Number"
                    android:inputType="textPersonName"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#8c8080">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:drawablePadding="5dp"
                    android:ems="20"
                    android:hint="Patient Address"
                    android:inputType="textPersonName"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:text="Test Name"/>
                <TextView
                    android:id="@+id/testname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="fever"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="15dp"
                    android:text="Status"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Initiation pending"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Comments:"
                android:textColor="#000"/>

            <MultiAutoCompleteTextView
                android:id="@+id/Comments"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="120dp"
                android:background="@drawable/edittext_button"
                android:layout_weight="1"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Prescription:"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                    <ImageView
                        android:id="@+id/prescription"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/noimage" />
                </android.support.design.widget.AppBarLayout>


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/gallery_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:src="@drawable/ic_camera_black_24dp"
                    app:fabSize="mini"
                    app:layout_anchor="@id/appbar"
                    app:layout_anchorGravity="bottom|right|end" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/camera_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:src="@drawable/ic_camera_alt_black_24dp"
                    app:fabSize="mini"
                    app:layout_anchor="@id/appbar"
                    app:layout_anchorGravity="bottom|left|end" />

            </android.support.design.widget.CoordinatorLayout>

            <Button
                android:id="@+id/click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="60dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/box"
                android:text="Click here for patient history"
                android:textColor="#FFFFFF"
                android:layout_marginRight="100dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="20dp"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="60dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/round_button"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:layout_marginRight="100dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="20dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>