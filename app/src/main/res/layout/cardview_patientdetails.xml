<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">
            <TextView
                android:id="@+id/Patient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sudarsana Rao"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#760061"
                android:transitionName="patient_name_transtion"
                android:textSize="25dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Patient_name"
                android:id="@+id/layout1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile No :"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textSize="15dp"
                    android:layout_marginStart="32dp"

                    />
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9492862167"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:transitionName="patient_phone_transtion"
                    android:textSize="15dp"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout2"
                android:layout_below="@+id/layout1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time slot   :"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textSize="15dp"
                    android:layout_marginStart="32dp"

                    />
                <TextView
                    android:id="@+id/time_slot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:00"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:transitionName="patient_time_transtion"
                    android:textSize="15dp"
                    android:layout_marginStart="12dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2"
                android:id="@+id/layout3"
               android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status         :"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textSize="15dp"
                    android:layout_marginStart="32dp"

                    />
                <TextView
                    android:id="@+id/Status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:layout_marginStart="13dp"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/aadharNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout3"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="#0c13e4"
                android:textSize="15dp"
                android:layout_marginStart="210dp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout3"
                android:text="Click for more ...."
                android:textAlignment="center"
                android:textColor="#0c13e4"
                android:textSize="15dp"
                android:layout_marginStart="210dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

