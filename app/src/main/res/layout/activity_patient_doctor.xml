<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/toolbar_gradient"
                app:popupTheme="@style/AppTheme.PopupOverlay">


                <android.support.v7.widget.SearchView
                    android:id="@+id/citysearch"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/edittext_button"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search city ">
                </android.support.v7.widget.SearchView>



                <TextView
                    android:id="@+id/mylocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableRight="@drawable/ic_add_location_black_24dp"
                    android:paddingLeft="4dp"
                    android:text="Location" />


            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="80dp"
            android:layout_marginStart="20dp"
            android:textColor="#610bd9"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_more_vert_black_24dp"
            android:textStyle="bold"
            android:text="Speciality"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="113dp"
                android:layout_marginTop="20dp"
                android:textColor="#610bd9"
                android:textStyle="bold"
                android:textSize="20sp"

                android:drawableRight="@drawable/ic_more_vert_black_24dp"
                android:layout_height="wrap_content"
                android:text="Range"/>

            <android.support.v4.widget.Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="180dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:text="Note:Range(0Km - 100Km):"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txt"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <!--<TextView-->
            <!--android:layout_width="112dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/toolbar"-->
            <!--android:layout_marginTop="120dp"-->
            <!--android:layout_marginStart="20dp"-->
            <!--android:textColor="#610bd9"-->
            <!--android:textSize="20dp"-->
            <!--android:drawableRight="@drawable/ic_more_vert_black_24dp"-->
            <!--android:textStyle="bold"-->

            <!--android:text="Range"/>-->

        <Spinner
            android:id="@+id/speciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/toolbar"
            android:layout_marginTop="80dp"
            android:layout_marginStart="170dp"
            android:textSize="20dp"

            >

        </Spinner>

        <!--<ListView-->
            <!--android:id="@+id/doctorlist"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="170dp">-->

        <!--</ListView>-->

        <include
            layout="@layout/card_layout"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </android.support.design.widget.CoordinatorLayout>




</RelativeLayout>