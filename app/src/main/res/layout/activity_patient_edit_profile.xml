                <TextView
                    android:id="@+id/select_dob"
                    android:textColor="#2C5E83"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="28dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="Date of Birth :" />


                <EditText
                    android:id="@+id/date_of_birth"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"

                    android:layout_weight="1"
                    android:textColorHint="#8c8080"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:textSize="15dp"
                    android:backgroundTint="@color/green"
                    android:drawablePadding="5dp"
                    android:hint="Date of Birth" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#8c8080">
                <EditText
                    android:id="@+id/address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:drawableLeft="@drawable/house_number_icon"
                    android:inputType="text"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:backgroundTint="@color/green"
                    android:hint="Door/Build No" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_address2"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#8c8080">
                <EditText
                    android:id="@+id/address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ems="20"
                    android:drawableLeft="@drawable/street_icons"
                    android:inputType="text"
                    android:drawablePadding="5dp"
                    android:textSize="15dp"
                    android:backgroundTint="@color/green"
                    android:hint="Street/location" />

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_city"
                    android:textColor="#2C5E83"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="Select City :" />

                <Spinner
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/green"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--<TextView-->
                    <!--android:id="@+id/select_pincode"-->
                    <!--android:textColor="#2C5E83"-->
                    <!--android:layout_width="wrap_content"-->
